<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
   <name>Open Web Analytics Integration</name>
   <author>professioneit.com</author>
   <version>1.0.0</version>
   <description>This module allows to seemlessly integrate Open Web Analytics Tracker in Joomla!. The method used is the "Javascript tracker"</description>
   <files>
      <filename module="mod_open_web_analytics">mod_open_web_analytics.php</filename>
      <filename>mod_open_web_analytics.xml</filename>
      <filename>index.html</filename>
   </files>
   <config>
      <fields name="params">
	 <fieldset name="basic" label="Module Parameters">
	    <field name="baseUrl" type="text" default="" label="OWA base URL" description="Do not forget the trailing /" />
	    <field name="siteID" type="text" default="" label="OWA SiteId"  />
	    <field name="trackClicks" type="radio" label="Track clicks" >
	       <option value="1">Yes</option>
	       <option value="0">No</option>
	    </field>
	    <field name="trackDomstream" type="radio" label="Track DOM stream" >
	       <option value="1">Yes</option>
	       <option value="0">No</option>
	    </field>
	 </fieldset>
      </fields>
   </config>

</extension>
